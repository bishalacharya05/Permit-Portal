@{
    ViewData["Title"] = "Home Page";
}
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Arial, Helvetica, sans-serif;
    }

    body {
        height: 100vh;
        background: linear-gradient(135deg, #1d976c, #93f9b9);
    }

    /* Hero Section */
    .hero {
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
    }

    /* Content Box */
    .content {
        background-color: white;
        padding: 40px 30px;
        border-radius: 12px;
        width: 90%;
        max-width: 500px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
    }

        .content h1 {
            color: #1d976c;
            margin-bottom: 15px;
        }

        .content p {
            color: #555;
            margin-bottom: 30px;
            line-height: 1.5;
        }

    /* Button */
    .apply-btn {
        text-decoration: none;
        background-color: #1d976c;
        color: white;
        padding: 12px 25px;
        border-radius: 6px;
        font-size: 16px;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }

        .apply-btn:hover {
            background-color: #148f63;
        }

</style>
<form method="get">
    <div class="hero">
        <div class="content">
            <h1>Tourism Permit Management System</h1>
            <p>
                Apply online for national park, trekking, and heritage site permits.
                Simple, fast, and secure.
            </p>

            <a class="apply-btn " asp-action="Apply" asp-controller="TouristPermit">Apply for Application</a>
        </div>
    </div>
</form>
   


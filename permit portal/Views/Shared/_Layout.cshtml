@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> signInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - permit_portal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/permit_portal.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">permit_portal</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item"> 
                            <a class="btn btn-sm btn-outline-success fs-6" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                        {

                            <li class="nav-item">
                                <a class="btn btn-sm btn-outline-success me-2 fs-6" asp-area="" asp-controller="TouristPermit" asp-action="Details">Show all Applicants</a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav ms-auto align-items-center">
                        @if (signInManager.IsSignedIn(User))
                        {
                            <li class="btn btn-sm me-2 fs-6">
                                @User.Identity?.Name
                            </li>

                            <a class="btn btn-sm btn-outline-success me-2 fs-6"
                               asp-area=""
                               asp-controller="Account"
                               asp-action="Logout">
                                Logout
                            </a>
                            
                        }

                        else
                        {
                            <a class="btn btn-sm btn-outline-success me-2 fs-6"
                               asp-controller="Account"
                               asp-action="Register">
                                Register
                            </a>

                            <a class="btn btn-sm btn-outline-success fs-6"
                               asp-controller="Account"
                               asp-action="Login">
                                Login
                            </a>
                        }
                    </ul>
                </div>
                        
                        
                    
                </div>
            
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - permit_portal - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
